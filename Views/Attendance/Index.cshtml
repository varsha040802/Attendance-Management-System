@{
    ViewData["Title"] = "Attendance Management System";
}



<div class="container py-5 ">

 
    <div class="mb-5">
        <h2 class="w-100 text-white bg-dark text-center py-3 border border-dark rounded shadow">
            Attendance Management System
        </h2>
    </div>

    <div class="d-flex flex-wrap justify-content-center align-items-center gap-4 mb-5">
        <div class="d-flex align-items-center">
            <label for="currentDate" class="form-label fw-bold me-2 mb-0">Date:</label>
            <input type="date" class="form-control" id="currentDate" style="min-width: 180px;" />
        </div>
        <div class="d-flex align-items-center">
            <label for="currentTime" class="form-label fw-bold me-2 mb-0">Time:</label>
            <input type="time" class="form-control" id="currentTime" style="min-width: 180px;" />
        </div>
    </div>

    <div class="row justify-content-center g-4">
        <div class="col-10 col-sm-4 col-md-3">
            <button onclick="redirectTo('InsertAttendance')" class="btn btn-primary btn-animated w-100 py-4 fs-5 shadow-sm d-flex flex-column align-items-center">
                <img src="/images/insert.png" alt="Insert Icon" width="50" height="50" class="mb-2" />
                <span> 📝 Insert Attendance</span>
            </button>
        </div>
        <div class="col-10 col-sm-4 col-md-3">
            <button onclick="redirectTo('ViewAttendance')" class="btn btn-success btn-animated w-100 py-4 fs-5 shadow-sm d-flex flex-column align-items-center">
                <img src="/images/view.png" alt="View Icon" width="50" height="50" class="mb-2" />
                <span> 📅 View Attendance</span>
            </button>
        </div>
        <div class="col-10 col-sm-4 col-md-3">
            <button onclick="redirectTo('AttendanceReport')" class="btn btn-danger btn-animated w-100 py-4 fs-5 shadow-sm d-flex flex-column align-items-center">
                <img src="images\report.png" alt="Report Icon" width="50" height="50" class="mb-2" />
                <span>📊 Attendance Report</span>
            </button>
        </div>
    </div>


</div>


<footer>
    <h5 class="fw-bold mb-1">Project: Smart Attendance System</h5>
    <p class="text-muted mb-0">Developed by <strong>Varsha Sahu</strong> | © 2025</p>
</footer>


<script>
    function updateDateTime() {
        const now = new Date();
        document.getElementById("currentDate").value = now.toISOString().split("T")[0];
        const hours = String(now.getHours()).padStart(2, '0');
        const minutes = String(now.getMinutes()).padStart(2, '0');
        document.getElementById("currentTime").value = `${hours}:${minutes}`;
    }
    updateDateTime();
    setInterval(updateDateTime, 60000); // update every minute

    function redirectTo(actionName) {
        window.location.href = `/Attendance/${actionName}`;
    }
</script>
